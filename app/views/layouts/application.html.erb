<!DOCTYPE html>
<html>
<div class="container">
	<head>
	  <title>RouteMapper</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBEol9AdAZ6s6pgZLn9uIfcSdJn7oOwXmU">
</script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
 
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="nav">
			<h2> RouteMapper</h2>
			<% if signed_in? %>
				<ul class="navbar">
					<li><%= current_user.username %></li>
					<li><%= link_to "Sign Out", session_url, method: :delete %></li>
					<li>
						<div class="users-search">
						  <label>
						  	Follow
						    <input type="text" name="username">
						  </label>
						  
						  <ul class="users"></ul>
						</div>
					</li>
					<li><a href="#rides/new">New Ride</a></li>
					<li><a href="#">Activity Feed</a></li>
					<li><a href="#rides/my">My Rides</a></li>
				</ul>
			<% else %>
				<ul class="navbar">
					<li><%= link_to "Sign In", new_session_url %></li>
					<li><%= link_to "Sign Up", new_user_url %></li>
				</ul>
			<% end %>
		</div>

	<%= yield %>

	</body>
</div>
</html>

